{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "settings": {
    "react": {
      "version": "detect" // React version. "detect" automatically picks the version you have installe
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "standard-with-typescript",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {}
}
